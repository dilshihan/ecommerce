<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products - Admin Dashboard</title>
    <link rel="stylesheet" href="/style/adminusers.css">
</head>

<body>
    <main class="ml-64 p-8">
        <!-- Page Header -->
        <div class="page-header">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Product Management</h1>
                <p class="text-gray-500">Manage your products inventory</p>
            </div>
            <div style="margin-left: 410px; " class="header-actions">
                <button style="display: flex; align-items: center; background-color: blue;  color: white;padding: 0.625rem 1.25rem;border-radius: 0.5rem;border: none;font-weight: 500;cursor: pointer;transition: background-color 0.2s; .edit-btn:hover { background-color: #e5e7eb};" class="add-prodect-btn" id="addProductBtn">
                    <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Add Product
                </button>
            </div>
            
            <div class="search-bar">
                <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
                <input type="text" placeholder="Search products..." class="search-input">
            </div>
        </div>

        <!-- Products Table -->
        <div class="users-table">
            <table class="w-full">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Stock</th>
                        <th>Price</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach((product) => { %>
                        <tr>
                            <td><%= product.name %></td>
                            <td class="truncate max-w-xs"><%= product.description %></td>
                            <td><%= product.category %></td>
                            <td><%= product.stock %></td>
                            <td>â‚¹<%= product.price %></td>
                            <td>
                                <button onclick="showImage('/uploads/<%=product.image[0] %>')" 
                                    style="background-color: #2196F3; color: white; padding: 6px 12px; border: none; border-radius: 4px; cursor: pointer; margin-left: 8px;">
                                    View
                                </button>
                            </td>
                            <td class="space-x-2">
                                <button class="update-button" data-productid="<%= product._id %>" 
                                    style="background-color: #4CAF50; color: white; padding: 8px 16px; border: none; border-radius: 4px; cursor: pointer;">
                                    Update
                                </button>
                                <button class="list-button" data-productid="<%= product._id %>" data-status="<%= product.status %>"
                                    style="background-color: #f44336; color: white; padding: 8px 16px; border: none; border-radius: 4px; cursor: pointer;">
                                    <%= product.status === "Listed" ? "Unlist" : "List" %>
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="pagination">
            <button class="page-button">Previous</button>
            <button class="page-button active">1</button>
            <button class="page-button">2</button>
            <button class="page-button">3</button>
            <button class="page-button">Next</button>   
        </div>
    </main>

